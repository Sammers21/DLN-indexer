{
  "name": "dln-indexer-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "bun@1.1.18",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:run": "turbo test:run",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "indexer": "bun run --filter=@dln/indexer start",
    "dashboard": "bun run --filter=@dln/dashboard dev",
    "dashboard:server": "bun run --filter=@dln/dashboard start"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.4.2"
  }
}